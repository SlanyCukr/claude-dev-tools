{
  "description": "Development workflow hooks.",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/block_antipatterns.py\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/validate_bash_output.py\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [],
    "PostToolUse": [],
    "SubagentStop": [],
    "SessionStart": []
  }
}
